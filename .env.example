# Django Settings
DEBUG=True
DJANGO_SETTINGS_MODULE=core.settings.development
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/theridian

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@localhost:5672//

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourproject.com

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id-example

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=https://yourproject.herokuapp.com

# Prometheus/Grafana
PROMETHEUS_MULTIPROC_DIR=/tmp

# Heroku (for production)
HEROKU_APP_NAME=your-app-name
HEROKU_API_KEY=your-heroku-api-key
HEROKU_EMAIL=your-heroku-email@example.com

# Docker Registry
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password